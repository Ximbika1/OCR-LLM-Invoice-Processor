datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  createdAt DateTime  @default(now())
  invoices  Invoice[]
}

model Invoice {
  id             Int      @id @default(autoincrement())
  date           DateTime
  amount         Float
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  fileUrl        String   
  cnpj           String
  companyName    String
  invoiceNumber  String
  displayName    String?   //Nome dado pelo usu√°rio (opcional)

  extractedText  String   @default("")
}

